<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="58dp"
    android:gravity="center_vertical">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivNodeImage"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_marginStart="14dp"
        app:shapeAppearanceOverlay="@style/circleStyle" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvNodeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:textColor="@color/FFC5C8E4"
        android:textSize="14sp"
        tools:text="US New York 001" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ivNodeExpand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:src="@drawable/switch_node_expand"
        android:textColor="@color/FF0DC2FF"
        android:textSize="12sp"
        android:textStyle="bold"
        tools:text="375ms" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivNodeSelect"
        android:layout_width="24sp"
        android:layout_height="24dp"
        android:layout_marginEnd="14dp"
        android:src="@drawable/selector_select" />
</androidx.appcompat.widget.LinearLayoutCompat>